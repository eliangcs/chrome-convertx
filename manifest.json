{
    "name": "ConvertX",
    "description": "Chinese encoding converter.",
    "manifest_version": 2,
    "minimum_chrome_version": "23",
    "version": "0.0.1",
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["main.js"]
        }
    },
    "permissions" : [
        { "fileSystem": ["write"] }
    ],
    "icons": {
        "16": "icon_16.png",
        "128": "icon_128.png"
    }
}
