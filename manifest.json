{
    "manifest_version": 2,
    "name": "ConvertX",
    "description": "__MSG_appDesc__",
    "version": "0.9.1",
    "author": "Chang-Hung Liang <eliang.cs@gmail.com>",

    "minimum_chrome_version": "23",
    "default_locale": "en",
    "offline_enabled": true,

    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },

    "permissions" : [
        { "fileSystem": ["write"] },
        "storage"
    ],

    "icons": {
        "16": "icon_16.png",
        "128": "icon_128.png"
    }
}
